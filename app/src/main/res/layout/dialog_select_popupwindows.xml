<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_bg_pressed">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:background="@drawable/selector_back_bg"
                android:text="@string/dialog_cancle"
                android:textColor="@color/tool_title_color"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textSize="@dimen/app_font_size_16" />
            <TextView
                android:id="@+id/tv_sure"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:background="@drawable/selector_back_bg"
                android:text="@string/dialog_sure"
                android:textColor="@color/tool_title_color"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textSize="@dimen/app_font_size_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tool_diver_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <com.contrarywind.view.WheelView
                android:layout_gravity="center"
                android:id="@+id/wheelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>