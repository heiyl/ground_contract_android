<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_lon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/app_font_size_16"
            android:textColor="@color/content_normal_color"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/tool_diver_color"/>
        <TextView
            android:id="@+id/tv_lat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/app_font_size_16"
            android:textColor="@color/content_normal_color"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_del"
        android:layout_width="49dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/app_font_size_18"
        android:background="@color/color_9EABBD"
        android:textColor="@color/white"
        android:text="âœ•"/>
</LinearLayout>
